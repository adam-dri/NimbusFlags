{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "FlagConfig",
  "type": "object",
  "additionalProperties": false,
  "required": ["key", "enabled", "conditions", "parameters"],
  "properties": {
    "key": {
      "type": "string",
      "minLength": 1,
      "description": "Unique flag key per client, for example 'promo_premium_ca'."
    },
    "enabled": {
      "type": "boolean",
      "description": "If false, the flag is always disabled regardless of conditions."
    },
    "conditions": {
      "type": "array",
      "description": "Optional list of conditions. An empty array means 'no restriction'.",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["attribute", "operator", "value"],
        "properties": {
          "attribute": {
            "type": "string",
            "minLength": 1,
            "description": "User attribute name, such as 'country' or 'subscription'."
          },
          "operator": {
            "type": "string",
            "enum": ["equals", "in"],
            "description": "How to compare the user attribute with 'value'."
          },
          "value": {
            "description": "Right-hand side value used by the operator."
          }
        },
        "allOf": [
          {
            "if": {
              "properties": { "operator": { "const": "equals" } }
            },
            "then": {
              "properties": {
                "value": {
                  "type": ["string", "number", "boolean", "null"],
                  "description": "Primitive value to be compared with the user attribute."
                }
              }
            }
          },
          {
            "if": {
              "properties": { "operator": { "const": "in" } }
            },
            "then": {
              "properties": {
                "value": {
                  "type": "array",
                  "minItems": 1,
                  "description": "Non-empty list of allowed values."
                }
              }
            }
          }
        ]
      }
    },
    "parameters": {
      "type": "object",
      "description": "Arbitrary configuration returned when the flag is enabled.",
      "default": {}
    }
  }
}
