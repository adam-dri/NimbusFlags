{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "FlagConfig (MVP)",
  "type": "object",
  "additionalProperties": false,
  "required": ["key", "enabled", "conditions", "parameters"],
  "properties": {
    "key": { "type": "string", "minLength": 1 },
    "enabled": { "type": "boolean" },
    "conditions": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["attribute", "operator", "value"],
        "properties": {
          "attribute": { "type": "string", "minLength": 1 },
          "operator": { "enum": ["equals", "in"] },
          "value": {}
        },
        "allOf": [
          { "if": { "properties": { "operator": { "const": "equals" } } },
            "then": { "properties": { "value": { "type": ["string","number","boolean","null"] } } } },
          { "if": { "properties": { "operator": { "const": "in" } } },
            "then": { "properties": { "value": { "type": "array", "minItems": 1 } } } }
        ]
      }
    },
    "parameters": { "type": "object" }
  }
}
